@using Loxy.Extensions
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <title>@ViewData["Title"]</title>
    @(this.RenderStylesheet())
    @(this.RenderHeadInsert())
    <style>
        .stats-footer {
            font-size: 10pt;
            opacity: 0.8;
            margin-top: 4em;
        }

        a {
            line-height: 2em;
        }
    </style>
</head>
<body>
<main role="main">
    @RenderBody()
</main>
</body>
@if (ViewData["ShouldRenderStatsFooter"] as bool? ?? false)
{
    @(this.RenderResponseStatsFooter())
}
@(this.RenderJavascript())
</html>